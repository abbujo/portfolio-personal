---
import BentoGrid from "./BentoGrid.astro";
import BentoCard from "./BentoCard.astro";
import SectionHeader from "./SectionHeader.astro";
import { projects } from "../content/profile";
---

<section id="projects">
    <BentoGrid>
        <SectionHeader title="Selected Projects" />

        {
            projects.map((project) => (
                <BentoCard colSpan={2} rowSpan={1} title={project.title}>
                    <div class="project-details">
                        <div class="stack">
                            {project.tags.map((tech) => (
                                <span class="tech-tag">{tech}</span>
                            ))}
                        </div>

                        <ul class="project-bullets">
                            {project.impact && (
                                <li>
                                    <strong>Impact:</strong> {project.impact}
                                </li>
                            )}
                        </ul>
                    </div>
                </BentoCard>
            ))
        }
    </BentoGrid>
</section>

<style>
    .project-details {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        height: 100%;
        margin-top: 0.5rem;
    }

    .stack {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .tech-tag {
        font-size: 0.75rem;
        border: 1px solid var(--border);
        padding: 0.125rem 0.5rem;
        opacity: 0.8;
    }

    .project-bullets {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .project-bullets li {
        font-size: 0.9rem;
        line-height: 1.4;
        opacity: 0.9;
    }

    .project-bullets strong {
        font-weight: 600;
        opacity: 1;
    }
</style>
