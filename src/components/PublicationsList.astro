---
import { publications } from "../content/profile";
import Section from "./Section.astro";
---

<Section id="publications">
    <h2 class="section-title">Publications</h2>

    <div class="publications-list">
        {
            publications.map((pub) => (
                <a
                    href={pub.link}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="pub-card"
                >
                    <div class="pub-year">{pub.year}</div>
                    <div class="pub-content">
                        <h3 class="pub-title">
                            {pub.title} <span class="arrow">â†—</span>
                        </h3>
                        <p class="pub-authors">{pub.authors}</p>
                        <p class="pub-venue">{pub.venue}</p>
                    </div>
                </a>
            ))
        }
    </div>
</Section>

<style>
    .section-title {
        margin-bottom: 3rem;
    }

    .publications-list {
        display: flex;
        flex-direction: column;
        border-top: 1px solid var(--border);
    }

    .pub-card {
        display: flex;
        gap: 2rem;
        padding: 2rem 0;
        border-bottom: 1px solid var(--border);
        text-decoration: none;
        color: inherit;
        transition: opacity 0.3s ease;
        align-items: baseline;
    }

    .pub-card:hover {
        opacity: 0.7;
    }

    .pub-year {
        font-family: var(--font-mono);
        opacity: 0.5;
        font-size: 0.875rem;
        min-width: 3rem;
    }

    .pub-content {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .pub-title {
        font-size: 1.125rem;
        font-weight: 500;
        margin: 0;
        line-height: 1.4;
    }

    .arrow {
        font-size: 0.875rem;
        margin-left: 0.25rem;
        opacity: 0.5;
    }

    .pub-authors {
        font-size: 0.95rem;
        opacity: 0.8;
        line-height: 1.5;
    }

    .pub-venue {
        font-size: 0.875rem;
        opacity: 0.6;
        font-style: italic;
    }

    @media (max-width: 600px) {
        .pub-card {
            flex-direction: column;
            gap: 0.5rem;
        }
    }
</style>
