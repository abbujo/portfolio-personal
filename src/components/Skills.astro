---
import BentoGrid from "./BentoGrid.astro";
import BentoCard from "./BentoCard.astro";
import SectionHeader from "./SectionHeader.astro";
import { skills } from "../content/profile";
---

<section id="skills">
    <BentoGrid>
        <SectionHeader title="Technical Skills" />

        {
            skills.map((skillGroup) => (
                <BentoCard colSpan={1} title={skillGroup.category}>
                    <ul class="skill-list">
                        {skillGroup.items.map((skill) => (
                            <li>{skill}</li>
                        ))}
                    </ul>
                </BentoCard>
            ))
        }
    </BentoGrid>
</section>

<style>
    .skill-list {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .skill-list li {
        font-size: 0.9rem;
        opacity: 0.9;
        display: flex;
        align-items: center;
    }

