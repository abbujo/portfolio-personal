---
import BentoCard from "./BentoCard.astro";
import { personalInfo } from "../content/profile";

const { name } = personalInfo;
---

<BentoCard colSpan={1} rowSpan={1} class="avatar-card" title="Portrait">
    <div class="image-wrapper">
        <img
            src={`${import.meta.env.BASE_URL}/profile.webp`}
            alt={`Portrait of ${name}`}
            class="editorial-portrait"
            width="400"
            height="400"
        />
        <div class="overlay"></div>
    </div>
</BentoCard>
<!-- Note: colSpan/rowSpan defaults overridden by parent grid logic if needed, 
     but keeping BentoCard structural ease. -->

<style>
    .image-wrapper {
        position: relative;
        width: 100%;
        height: 100%;
        /* Ensure it fills the card exactly */
        display: flex;
    }

    .editorial-portrait {
        width: 100%;
        height: 100%;
        object-fit: cover;
        filter: grayscale(100%) contrast(1.1) brightness(1.05); /* Editorial B/W look */
        /* Sharp edges enforced globally, but just in case */
        border-radius: 0;
        transition: transform 0.5s ease;
    }

    /* Zoom effect on hover */
    :global(.avatar-card:hover) .editorial-portrait {
        transform: scale(1.03);
    }

    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        /* Subtle gradient to unification */
        background: linear-gradient(
            to bottom,
            transparent 50%,
            var(--overlay) 100%
        );
        pointer-events: none;
        opacity: 0.2;
    }
</style>
