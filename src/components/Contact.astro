---
import BentoGrid from "./BentoGrid.astro";
import BentoCard from "./BentoCard.astro";
import { personalInfo } from "../content/profile";

const year = new Date().getFullYear();
---

<footer id="contact">
    <BentoGrid>
        <BentoCard colSpan={4} class="footer-card">
            <div class="footer-content">
                <h2>Ready to collaborate?</h2>
                <div class="contact-actions">
                    <a href={`mailto:${personalInfo.email}`} class="btn-large">
                        {personalInfo.email}
                    </a>
                    <span class="phone">{personalInfo.phone}</span>
                </div>

                <div class="footer-bottom">
                    <div class="copyright">
                        <p>
                            &copy; {year}
                            {personalInfo.name}. All rights reserved.
                        </p>
                        <p>Built with Astro. Pure Black & White.</p>
                    </div>
                </div>
            </div>
        </BentoCard>
    </BentoGrid>
</footer>

<style>
    #contact {
        margin-top: 4rem;
        padding-bottom: 2rem;
    }

    .footer-card {
        text-align: center;
        padding: 3rem 1.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .footer-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 2rem;
        width: 100%;
    }

    h2 {
        font-size: 2rem;
        margin: 0;
        letter-spacing: -0.02em;
    }

    .contact-actions {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        align-items: center;
    }

    .btn-large {
        font-size: 1.5rem;
        text-decoration: none;
        border-bottom: 2px solid var(--border);
        transition: border-color 0.3s ease;
        padding-bottom: 0.5rem;
    }

    .btn-large:hover {
        border-color: var(--fg);
    }

    .phone {
        font-size: 1.25rem;
        opacity: 0.8;
    }

    .footer-bottom {
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
        margin-top: 2rem;
        border-top: 1px solid var(--border);
        padding-top: 2rem;
        opacity: 0.6;
    }

    .copyright {
        font-size: 0.75rem;
    }

    .copyright p {
        margin: 0.25rem 0;
    }
</style>
