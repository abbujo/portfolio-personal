---
import { personalInfo, config } from "../content/profile";
import Section from "./Section.astro";

const { name, title, subtitle, about, availability } = personalInfo;
const { email } = personalInfo;
---

<Section id="about" class="hero-section">
    <div class="hero-grid">
        <div class="hero-content">
            <div class="availability-badge">
                <span class="dot"></span>
                {availability}
            </div>

            <h1 class="hero-title">
                {name}
                <br />
                <span class="muted">{subtitle}</span>
            </h1>

            <div class="hero-intro">
                {about.map((paragraph) => <p>{paragraph}</p>)}
            </div>

            <div class="hero-actions">
                <a href={`mailto:${email}`} class="btn primary">Get in Touch</a>
                <a href="#projects" class="btn secondary">View Work</a>
            </div>
        </div>

        <div class="hero-image">
            <div class="image-frame">
                <img
                    src={`${import.meta.env.BASE_URL}/images/portrait.webp`}
                    alt="Portrait"
                    class="portrait"
                />
            </div>
        </div>
    </div>
</Section>

<style>
    .hero-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 3rem;
        align-items: start;
    }

    /* Desktop: 2 Columns */
    @media (min-width: 900px) {
        .hero-grid {
            grid-template-columns: 1.2fr 0.8fr;
            gap: 4rem;
        }
    }

    .availability-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.875rem;
        padding: 0.25rem 0.75rem;
        border: 1px solid var(--border);
        margin-bottom: 1.5rem;
        font-weight: 500;
    }

    .dot {
        width: 8px;
        height: 8px;
        background-color: var(
            --fg
        ); /* Green usually, but B/W requested. Solid foreground. */
        border-radius: 50% !important; /* Only exception for dot? No, user said radius: 0 everywhere. strict. */
        border-radius: 0 !important;
    }

    .hero-title {
        margin-bottom: 2rem;
    }

    .muted {
        color: var(--fg);
        opacity: 0.5;
    }

    .hero-intro {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin-bottom: 2.5rem;
        max-width: 60ch;
        font-size: 1.125rem;
        opacity: 0.9;
    }

    .hero-actions {
        display: flex;
        gap: 1rem;
    }

    .btn {
        padding: 1rem 2rem;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.875rem;
        letter-spacing: 0.05em;
        border: 1px solid var(--fg);
        min-width: 160px;
        text-align: center;
    }

    .btn.primary {
        background: var(--fg);
        color: var(--bg);
    }

    .btn.primary:hover {
        opacity: 0.9;
    }

    .btn.secondary {
        background: transparent;
        color: var(--fg);
    }

    .btn.secondary:hover {
        background: var(--overlay);
    }

    /* Image */
    .hero-image {
        position: relative;
    }

    .image-frame {
        width: 100%;
        aspect-ratio: 3/4;
        position: relative;
        /* border: 1px solid var(--border); Removed */
        /* background: var(--border); Removed */
        overflow: hidden;
    }

    .portrait {
        width: 100%;
        height: 100%;
        object-fit: cover;
        /* filter: grayscale(100%); Removed */
    }

    /* .overlay removed */
</style>
