---
import BentoGrid from "./BentoGrid.astro";
import BentoCard from "./BentoCard.astro";
import SectionHeader from "./SectionHeader.astro";
import { experience } from "../content/profile";
---

<section id="experience">
    <BentoGrid>
        <SectionHeader title="Experience" />

        {
            experience.map((role) => (
                <BentoCard colSpan={4} class="experience-card">
                    <div class="exp-header">
                        <h3 class="role-title">{role.role}</h3>
                        <span class="company">{role.company}</span>
                        <span class="period">{role.period}</span>
                    </div>
                    <ul class="highlights">
                        {role.highlights.map((item) => (
                            <li>{item}</li>
                        ))}
                    </ul>
                </BentoCard>
            ))
        }
    </BentoGrid>
</section>

<style>
    .exp-header {
        display: flex;
        flex-wrap: wrap;
        align-items: baseline;
        gap: 1rem;
        margin-bottom: 1rem;
        border-bottom: 1px solid var(--border);
        padding-bottom: 0.75rem;
    }

    .role-title {
        font-size: 1.25rem;
        font-weight: 700;
        margin: 0;
    }

    .company {
        font-size: 1rem;
        opacity: 0.8;
    }

    .period {
        margin-left: auto;
        font-size: 0.875rem;
        opacity: 0.6;
        font-family: monospace;
    }

    .highlights {
        padding-left: 1.25rem;
        margin: 0;
    }

    .highlights li {
        margin-bottom: 0.5rem;
        opacity: 0.9;
    }

    @media (max-width: 600px) {
        .exp-header {
            flex-direction: column;
            gap: 0.25rem;
        }
        .period {
            margin-left: 0;
        }
    }
</style>
